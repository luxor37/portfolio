@using OrchardCore.Navigation
@inject OrchardCore.IOrchardHelper Orchard

@{
    var menuItems = await Orchard.GetContentItemByHandleAsync("alias:main-nav");
}

<header>
    <nav class="show_only_desktop">
        <div class="sidenav">
            @foreach (var menuItem in menuItems.Content.MenuItemsListPart.MenuItems)
            {
                <a href="@menuItem.LinkMenuItemPart.Url">@menuItem.LinkMenuItemPart.Name</a>
            }
        </div>
    </nav>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark show_only_mobile">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Remi Martel</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                @{
                    var isFirst = true;
                }
                @foreach (var menuItem in menuItems.Content.MenuItemsListPart.MenuItems)
                {
                    <li class="nav-item @{ if (isFirst == true){@Html.Raw("active"); isFirst = false;}}">
                        <a class="nav-link" href="@menuItem.LinkMenuItemPart.Url">@menuItem.LinkMenuItemPart.Name<span class="sr-only">(current)</span></a>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>